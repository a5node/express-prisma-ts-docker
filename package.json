{
  "name": "app",
  "version": "1.0.0",
  "description": "API ts-express-prisma-docker",
  "main": "index.js",
  "type": "commonjs",
  "author": "a5node",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/main.js",
    "prestart": "npm run build && npm run generate && npm run prisma:migrate",
    "build": "tsc -p . && ncp src dist",
    "dev": "cross-env NODE_ENV=development nodemon",
    "dev:inspect": "cross-env NODE_ENV=development nodemon -e ts,json --exec node --inspect=localhost:9222 -r ts-node/register src/main.ts",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.ts --coverage",
    "lint": "eslint ./src/**",
    "lint:fix": "eslint ./src/** --fix",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:migrate": "prisma migrate dev --name init",
    "adminer": "docker run --rm -p 8001:80 dockette/adminer:dg",
    "docker:up": "docker-compose rm -sf backend &&  docker-compose -f docker-compose.yaml up -d backend",
    "docker:stop": "docker-compose stop backend",
    "docker:log": "docker-compose logs -f --tail 100 backend",
    "docker:clear": "docker volume prune",
    "docker:start": "docker-compose up -d",
    "docker:node": "docker-compose exec backend node"
  },
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.2.2"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/express-rate-limit": "^6.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^27.0.2",
    "@types/jest-specific-snapshot": "^0.5.6",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.42",
    "@types/nodemon": "^1.19.1",
    "@types/prettier": "^2.6.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "prisma": "^4.1.0",
    "supertest": "^6.1.6",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=14.x.x",
    "npm": ">=7.x.x"
  }
}
